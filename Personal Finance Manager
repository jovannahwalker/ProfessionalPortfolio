# Personal Finance Manager
# This program helps users track income, expenses, and savings goals.

class Transaction:
    def __init__(self, amount, category, notes):
        self.amount = amount
        self.category = category
        self.notes = notes

class User:
    def __init__(self, name):
        self.name = name
        self.transactions = []
        self.budgets = {}

    def add_transaction(self, transaction):
        self.transactions.append(transaction)

    def set_budget(self, category, budget_amount):
        self.budgets[category] = budget_amount

    def get_total_income(self):
        total_income = sum(transaction.amount for transaction in self.transactions if transaction.amount > 0)
        return total_income

    def get_total_expenses(self):
        total_expenses = sum(transaction.amount for transaction in self.transactions if transaction.amount < 0)
        return total_expenses

    def get_savings_goal_progress(self):
        savings_goal = self.budgets.get('Savings', 0)
        total_savings = sum(transaction.amount for transaction in self.transactions if transaction.category == 'Savings')
        return total_savings / savings_goal * 100 if savings_goal > 0 else 0

    def get_spending_by_category(self):
        spending_by_category = {}
        for transaction in self.transactions:
            if transaction.amount < 0:
                category = transaction.category
                spending_by_category[category] = spending_by_category.get(category, 0) + transaction.amount
        return spending_by_category

# Sample usage
if __name__ == "__main__":
    user = User("Alice")

    # Add transactions
    user.add_transaction(Transaction(2000, "Salary", "June salary"))
    user.add_transaction(Transaction(-500, "Food", "Groceries"))
    user.add_transaction(Transaction(-100, "Transportation", "Bus fare"))

    # Set budgets
    user.set_budget("Food", 400)
    user.set_budget("Transportation", 150)
    user.set_budget("Savings", 1000)

    # Display user's financial summary
    print(f"{user.name}'s Financial Summary:")
    print(f"Total Income: ${user.get_total_income()}")
    print(f"Total Expenses: ${user.get_total_expenses()}")
    print(f"Spending by Category: {user.get_spending_by_category()}")
    print(f"Savings Goal Progress: {user.get_savings_goal_progress()}%")

