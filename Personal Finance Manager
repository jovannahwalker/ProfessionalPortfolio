import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# FinanceTracker class to manage financial transactions
class FinanceTracker:
    def __init__(self):
        # Initialize an empty DataFrame to store transactions
        self.transactions = pd.DataFrame(columns=['Date', 'Category', 'Type', 'Amount'])

    # Method to add a new transaction
    def add_transaction(self, date, category, t_type, amount):
        new_transaction = {'Date': date, 'Category': category, 'Type': t_type, 'Amount': amount}
        self.transactions = self.transactions.append(new_transaction, ignore_index=True)

    # Method to generate a summary of expenses and income by category
    def get_summary(self):
        return self.transactions.groupby(['Category', 'Type']).sum().reset_index()

    # Method to visualize expenses by category
    def plot_expenses_by_category(self):
        expenses = self.transactions[self.transactions['Type'] == 'Expense']
        sns.barplot(x='Category', y='Amount', data=expenses)
        plt.title('Expenses by Category')
        plt.xticks(rotation=45)
        plt.show()

    # Method to visualize total income versus expenses
    def plot_income_vs_expenses(self):
        summary = self.transactions.groupby('Type')['Amount'].sum().reset_index()
        sns.barplot(x='Type', y='Amount', data=summary)
        plt.title('Income vs Expenses')
        plt.show()

# Main function to demonstrate the FinanceTracker functionality
def main():
    # Create an instance of FinanceTracker
    tracker = FinanceTracker()

    # Adding some sample transactions
    tracker.add_transaction('2024-06-01', 'Groceries', 'Expense', 150.00)
    tracker.add_transaction('2024-06-02', 'Salary', 'Income', 3000.00)
    tracker.add_transaction('2024-06-03', 'Rent', 'Expense', 800.00)

    # Display the summary of transactions
    print(tracker.get_summary())

    # Visualize the data
    tra
